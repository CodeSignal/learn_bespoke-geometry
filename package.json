  "dependencies": {
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "concurrently": "^8.2.2",
    "typescript": "^5.9.3",
    "vite": "^5.4.11"
  }
}
