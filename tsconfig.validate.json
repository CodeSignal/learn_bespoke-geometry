{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "types": ["node"],
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "rootDir": "validate",
    "outDir": "validate"
  },
  "include": ["validate/**/*.ts"],
  "exclude": ["node_modules"]
}
